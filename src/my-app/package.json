{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "dev:frontend": "next dev --turbopack",
    "dev:backend": "bash -c 'cd ../.. && uvicorn src.api:app --reload --host 127.0.0.1 --port 8000'",
    "dev:mongo": "bash -c 'if ! command -v brew >/dev/null 2>&1; then echo \"Homebrew not installed. Install Homebrew or edit dev:mongo script.\" >&2; exit 1; fi; if ! brew services list | grep -E \"mongodb-community\\\\s+started\" >/dev/null 2>&1; then echo \"Starting MongoDB via Homebrew service...\"; brew services start mongodb/brew/mongodb-community; else echo \"MongoDB service already running.\"; fi; echo \"MongoDB service active. Press Ctrl+C to stop all (this will NOT stop the brew service).\"; while sleep 3600; do :; done'",
    "mongo:status": "bash -c 'brew services list | grep mongodb-community || echo \"mongodb-community not found in services list\"'",
    "mongo:stop": "bash -c 'brew services stop mongodb/brew/mongodb-community'",
    "dev:all": "concurrently -k -n FRONTEND,BACKEND,MONGO -c auto \"npm:dev:frontend\" \"npm:dev:backend\" \"npm:dev:mongo\""
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tabler/icons-react": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "fuse.js": "^7.0.0",
    "lucide-react": "^0.462.0",
    "mongodb": "^6.20.0",
    "next": "15.5.3",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-day-picker": "^9.11.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.53.0",
    "recharts": "^2.12.7",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5"
  }
}
