{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "dev:frontend": "next dev --turbopack",
    "dev:backend": "bash -c 'cd ../.. && uvicorn src.api:app --reload --host 127.0.0.1 --port 8000'",
    "dev:mongo": "bash -c 'if lsof -nP -iTCP:27017 -sTCP:LISTEN >/dev/null 2>&1; then echo \"MongoDB already running on 27017; leaving it running\"; tail -f /dev/null; fi; mongod --config /opt/homebrew/etc/mongod.conf'",
    "mongo:status": "bash -c 'brew services list | grep mongodb-community || echo \"mongodb-community not found in services list\"'",
    "mongo:stop": "bash -c 'brew services stop mongodb/brew/mongodb-community'",
    "dev:stack": "concurrently -n FRONTEND,BACKEND -c auto \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:all": "concurrently -n FRONTEND,BACKEND,MONGO -c auto \"npm:dev:frontend\" \"npm:dev:backend\" \"npm:dev:mongo\""
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tabler/icons-react": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "diff-match-patch": "^1.0.5",
    "fuse.js": "^7.0.0",
    "lucide-react": "^0.553.0",
    "mongodb": "^7.0.0",
    "next": "^16.1.1",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react": "19.2.0",
    "react-day-picker": "^9.11.1",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.66.0",
    "recharts": "^2.15.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/diff-match-patch": "^1.0.36",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.22",
    "baseline-browser-mapping": "^2.9.12",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "shadcn": "^3.5.0",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5"
  }
}
